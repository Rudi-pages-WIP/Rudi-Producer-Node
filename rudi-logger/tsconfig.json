{
    "compilerOptions": {
        "outDir": "./dist/",
        "module": "commonjs",
        "target": "ES2020",

        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "noImplicitAny": true,
        "noImplicitOverride": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "strictNullChecks": true,

        "allowJs": true,
        "checkJs": false
    },
    "files": [
        "src/interfaces.ts",
        "src/rudilogger.ts",
        "src/local.ts"
    ]
}
