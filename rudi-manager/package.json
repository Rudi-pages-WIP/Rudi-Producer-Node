{
  "description": "Application d'administration du noeud RUDI",
  "name": "rudi-prodmanager-back",
  "version": "2.3.1",
  "author": "Yann Porret <yporret@micropole.com>, Olivier Martineau <olivier.martineau@irisa.fr>",
  "license": "EUPL-1.2",
  "private": true,
  "main": "server.js",
  "scripts": {
    "prestart": "npm install",
    "test": "jest --config ./jest.config.json --coverage",
    "testCI": "jest --ci --reporters=default --reporters=jest-junit",
    "front": "cd front && npm start",
    "startProd": "Set NODE_ENV=production&node server",
    "serverWindow": "nodemon server.js --ignore './front/*' --exec \"Set RUDI_PROD_MANAGER_GIT_REV=git rev-parse --short HEAD& node\"",
    "serverLinux": "nodemon server.js --ignore './front/*' --exec \"export RUDI_PROD_MANAGER_GIT_REV=$(git rev-parse --short HEAD) ; node \"",
    "front-build": "cd front && npm run build",
    "lintBack": "eslint \"**/*.js\"",
    "lintFront": "eslint ./front/src/**/*.js -c front/.eslintrc --no-ignore",
    "prettier": "npx prettier --write .",
    "quality": "npm run prettier && npm run lintBack -- --fix",
    "stats": "find . -name \"node_modules\" -type d -prune | xargs du -chs",
    "cleanup": "rm -fR ./node_modules &; rm -fR ./front/node_modules &; rm -fR **/package-lock.json 2> /dev/null; rm -fR **/yarn.lock 2> /dev/null"
  },
  "dependencies": {
    "@aqmo.org/jwt_lib": "^1.1.9",
    "@aqmo.org/rudi_logger": "^1.1.2",
    "@babel/preset-react": "^7.18.6",
    "axios": "^1.3.4",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "helmet": "^6.0.1",
    "ini": "^3.0.1",
    "jsonwebtoken": "^9.0.0",
    "lodash": "^4.17.21",
    "passport": "^0.6.0",
    "passport-jwt": "^4.0.1",
    "passport-local": "^1.0.0",
    "sqlite3": "^5.1.4",
    "sshpk": "^1.17.0",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.21.0",
    "@babel/eslint-parser": "^7.19.1",
    "@babel/preset-env": "^7.20.2",
    "eslint": "^8.34.0",
    "eslint-config-google": "^0.14.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-only-warn": "^1.1.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-unused-imports": "^2.0.0",
    "jest": "^29.4.3",
    "jest-express": "^1.12.0",
    "jest-junit": "^15.0.0",
    "nodemon": "^2.0.20",
    "prettier": "^2.8.4"
  }
}
