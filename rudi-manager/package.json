{
  "name": "rudi-prodmanager",
  "version": "1.0.0",
  "description": "Application d'administration du noeud RUDI",
  "main": "server.js",
  "scripts": {
    "test": "jest --config ./jest.config.json --coverage",
    "testCI": "jest --ci --reporters=default --reporters=jest-junit",
    "front": "cd front && npm start",
    "startProd": "Set NODE_ENV=production&node server",
    "serverWindow": "nodemon server.js --exec \"Set RUDI_PROD_MANAGER_GIT_REV=git rev-parse --short HEAD& node\"",
    "serverLinux": "nodemon server.js --exec \"export RUDI_PROD_MANAGER_GIT_REV=\"$(git rev-parse --short HEAD)\"; node \"",
    "dev": "concurrently --kill-others-on-fail \"npm run front\" \"npm run serverWindow\"",
    "devO": "concurrently --kill-others-on-fail \"npm run front\" \"npm run serverLinux\"",
    "front:build": "cd front && npm run build",
    "lint": "eslint \"**/*.js\"",
    "prettier": "npx prettier --write .",
    "quality": "npm run prettier && npm run lint -- --fix"
  },
  "author": "Yann Porret <yporret@micropole.com>",
  "license": "EUPL-1.2",
  "dependencies": {
    "@aqmo.org/rudi_logger": "^1.1.2",
    "axios": "^0.26.0",
    "bcrypt": "^5.0.1",
    "bluebird": "^3.7.2",
    "body-parser": "^1.19.0",
    "concurrently": "^7.0.0",
    "cookie-parser": "^1.4.5",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "helmet": "^4.6.0",
    "ini": "^1.3.8",
    "jsonwebtoken": "^8.5.1",
    "moment": "^2.29.1",
    "passport": "^0.4.1",
    "passport-jwt": "^4.0.0",
    "passport-local": "^1.0.0",
    "sqlite3": "^5.0.2",
    "sshpk": "^1.16.1"
  },
  "devDependencies": {
    "@babel/core": "^7.17.5",
    "@babel/eslint-parser": "^7.17.0",
    "eslint": "^7.22.0",
    "eslint-config-google": "^0.14.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-only-warn": "^1.0.2",
    "jest": "^27.5.0",
    "jest-express": "^1.12.0",
    "jest-junit": "^13.0.0",
    "nodemon": "^2.0.7",
    "prettier": "^2.3.0"
  }
}
