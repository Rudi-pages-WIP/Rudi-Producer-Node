{
    "htmlJsonTemplate": [
        { "tag": "form-header", "children": [
            { "id": "title",          "tag": "h1" },
            { "id": "@header_actions", "tag": "div" }
        ]},
        { "tag": "hr" },
        { "tag": "form-body", "children": [
            { "tag":"form-section", "class":["row"], "children": [
                { "id": "load_file",           "tag": "h1"           },
                { "id": "@available_formats",  "tag": "file-input",  "class": ["col","s4","m8","l12"],  "attr": { "required": true } }
            ]},
            { "tag":"form-section", "class":["row"], "children": [
                { "id": "global",               "tag": "h1"           },
                { "id": "@global_id",           "tag": "text-input",            "class": ["col","s4","m4","l6"],   "attr": { "disabled": true, "required": true }           },
                { "id": "@local_id",            "tag": "text-input",            "class": ["col","s4","m4","l6"]    },
                { "id": "@doi",                 "tag": "text-input",            "class": ["col","s4","m4","l6"]    },
                { "id": "@resource_title",      "tag": "text-input",            "class": ["col","s4","m4","l6"],   "attr": { "required": true }   },
                { "id": "@synopsis",            "tag": "textarea-cards-block",  "class": ["col","s4","m8","l12"],  "attr": { "required": true }   },
                { "id": "@summary",             "tag": "textarea-cards-block",  "class": ["col","s4","m8","l12"],  "attr": { "required": true }   },
                { "id": "@theme",               "tag": "select-input",          "class": ["col","s4","m4","l6"],   "attr": { "required": true }   },
                { "id": "@keywords",            "tag": "selectm-input",         "class": ["col","s4","m4","l6"],   "attr": { "required": true }   },
                { "id": "@producer",            "tag": "select-input",          "class": ["col","s4","m8","l12"],  "attr": { "required": true }   },
                { "id": "@contacts",            "tag": "option-cards-block",    "class": ["col","s4","m8","l12"],  "attr": { "required": true }   },
                { "id": "@resource_languages",  "tag": "selectm-input",         "class": ["col","s4","m4","l6"]    },
                { "tag":"form-section", "class":["row"], "children": [
                        { "id": "temporal_spread",   "tag": "h1"           },
                        { "id": "@start_date",       "tag": "date-input",  "class": ["col","s4","m4","l6"]  },
                        { "id": "@end_date",         "tag": "date-input",  "class": ["col","s4","m4","l6"]  }
                ]},
                { "tag":"form-section", "class":["row"], "children": [
                    { "id": "dataset_size",         "tag": "h1"           },  
                    { "id": "@numbers_of_records",  "tag": "number-input",  "class": ["col","s4","m4","l6"]  },
                    { "id": "@number_of_fields",    "tag": "number-input",  "class": ["col","s4","m4","l6"]  } 
                ]},
                { "tag":"form-section", "class":["row"], "children": [
                    { "id": "dataset_dates",  "tag": "h1"           }, 
                    { "id": "@created",       "tag": "date-input",  "class": ["col","s4","m4","l6"],  "attr": { "required": true } },
                    { "id": "@validated",     "tag": "date-input",  "class": ["col","s4","m4","l6"]   },
                    { "id": "@published",     "tag": "date-input",  "class": ["col","s4","m4","l6"]   },
                    { "id": "@updated",       "tag": "date-input",  "class": ["col","s4","m4","l6"],  "attr": { "required": true } },
                    { "id": "@deleted",       "tag": "date-input",  "class": ["col","s4","m4","l6"]   }   
                ]},
                { "id": "@storage_status", "tag": "select-input", "class": ["col","s4","m4","l6"], "attr": { "disabled": true, "required": true } }
                
            ]},
            { "tag": "form-section", "class": ["row"], "children": [
                { "id": "access_condition", "tag": "h1" },
                { "tag": "form-section", "class": ["row"], "children": [
                    { "id": "confidentiality",     "tag": "h1" },
                    { "id": "@restricted_access",  "tag": "checkbox-input",  "class": ["col","s4","m4","l6"]  },
                    { "id": "@gdpr_sensitive",     "tag": "checkbox-input",  "class": ["col","s4","m4","l6"]  }
                ]},
                { "tag": "form-section", "class": ["row"], "children": [
                    { "id": "licence",               "tag": "h1" },
                    { "id": "@licence_type",         "tag": "select-input",          "class": ["col","s4","m4","l6"],  "attr": { "required": true } },
                    { "id": "@licence_label",        "tag": "select-input",          "class": ["col","s4","m4","l6"]   },
                    { "id": "@custom_licence_label", "tag": "textarea-cards-block",  "class": ["col","s4","m8","l12"]  },
                    { "id": "@custom_licence_uri",   "tag": "text-input",            "class": ["col","s4","m4","l6"]   }
                ]},
                { "id": "@usage_constraint",           "tag": "textarea-cards-block",  "class": ["col","s4","m8","l12"]  },
                { "id": "@bibliographical_reference",  "tag": "textarea-cards-block",  "class": ["col","s4","m8","l12"]  },
                { "id": "@mandatory_mention",          "tag": "textarea-cards-block",  "class": ["col","s4","m8","l12"]  },
                { "id": "@access_constraint",          "tag": "textarea-cards-block",  "class": ["col","s4","m8","l12"]  },
                { "id": "@other_constraints",          "tag": "textarea-cards-block",  "class": ["col","s4","m8","l12"]  }
            ]},
            { "tag": "form-section", "class": ["row"], "children": [
                { "id": "geography",  "tag": "h1" } ,
                { "id": "@geography",  "tag": "map-input",  "class": ["col","s4","m8","l12"],  "attr": { "lat": 48.11285581395178, "lng": -1.6777706355499762, "zoom": 12} }
            ]},
            { "tag": "form-section", "class": ["row"], "children": [
                { "id": "metadata_info",          "tag": "h1" } ,
                { "id": "@metadata_api_version",  "tag": "text-input",          "class": ["col","s4","m8","l12"],  "attr": { "disabled": true, "required": true } },
                { "id": "@metadata_created",      "tag": "date-input",          "class": ["col","s4","m4","l6"],   "attr": { "disabled": true } },
                { "id": "@metadata_updated",      "tag": "date-input",          "class": ["col","s4","m4","l6"],   "attr": { "disabled": true } },
                { "id": "@metadata_validated",    "tag": "date-input",          "class": ["col","s4","m4","l6"],   "attr": { "disabled": true } },
                { "id": "@metadata_published",    "tag": "date-input",          "class": ["col","s4","m4","l6"],   "attr": { "disabled": true } },
                { "id": "@metadata_provider",     "tag": "select-input",        "class": ["col","s4","m4","l6"]    },
                { "id": "@metadata_contacts",     "tag": "option-cards-block",  "class": ["col","s4","m8","l12"]   }
            ]}
        ]},
        { "tag": "form-footer", "children": [
            { "id": "@submit_btn", "tag": "button" }
        ]}
    ],
    "TODO:": {
        "end_date": { "*": { "required": true} }
    },
    "formBindings": {
        "licence_type": {
            "licence_label":        { "STANDARD": { "required": true, "hidden": false } },
            "custom_licence_label": { "CUSTOM":   { "required": true, "hidden": false } },
            "custom_licence_uri":   { "CUSTOM":   { "required": true, "hidden": false } }  
        }
    },
    "sumbitTemplate": {
        "global_id": "global_id",
        "local_id": "local_id",
        "doi": "doi",
        "resource_title": "resource_title",
        "synopsis": "synopsis",
        "summary": "summary",
        "theme": "theme",
        "keywords": "keywords",
        "producer": "producer",
        "contacts": "contacts",
        "available_formats": "available_formats",
